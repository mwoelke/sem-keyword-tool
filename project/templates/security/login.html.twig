{% extends 'base.html.twig' %}

{% block title %}Login | SEM Keyword Tool
{% endblock %}

{% block body %}


<div class="row align-items-center h-100" style="margin: 0px">
	<div class="col-12 col-md-4 mx-auto text-center">
		<h1 class="m-5">Login</h1>
		<hr>
		<form class="form-group" action="{{ path('login') }}" method="post">
			{% if error %}
			<div class="alert alert-danger m-b-1 p-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<div class="input-group mb-2">
				<span class="input-group-text">
					<i class="bi bi-person" title="Mail address"></i>
				</span>
				<input class="form-control" type="text" id="username" name="username" value="{{ last_username }}"
					placeholder="E-Mail" required>
			</div>

			<div class="input-group mb-2">
				<span class="input-group-text">
					<i class="bi bi-key" title="Password"></i>
				</span>
				<input class="form-control" type="password" id="password" name="password" placeholder="Password"
					required>
			</div>
			<input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<input class="form-control" type="hidden" name="_redirect" value="1">

			<div class="d-grid gap-2 mb-2"><a class="btn btn-secondary" href="/register">
				<i class="bi bi-door-open"></i> Register</a></div>

			<div class="d-grid gap-2">
				<button class="btn btn-primary" type="submit">
					<i class="bi bi-arrow-bar-right"></i>
					Login</button>
			</div>
		</form>
	</div>
</div>
{% endblock %}