{% extends 'base.html.twig' %}

{% block title %}Login | SEM Keyword Tool{% endblock %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row align-items-center h-100">
    <div class="col-12 col-md-4 mx-auto text-center">
        <div class="animate__animated animate__fadeInUp">
            <h1 class="m-5">Keyword Tool</h1>
            <form class="form-group" action="{{ path('login') }}" method="post">

                <div class="input-group mb-2">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" required>
                </div>

                <div class="input-group mb-2">
                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                    <input class="form-control" type="password" id="password" name="_password" placeholder="Password" required>
                </div>
                <input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit"><i class="bi bi-arrow-bar-right"></i> Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
